<resources>
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/blackish_blue</item>
        <item name="colorOnSecondary">@color/blackish_blue</item>

        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="SearchEditText" parent="@style/RegularTextFont">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:textColor">@color/blackish_blue</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:tint">@color/gray</item>
    </style>

    <style name="SearchItemHeader" parent="@style/RegularTextFont">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchItemSubHeader" parent="@style/RegularTextFont">
        <item name="android:textColor">@color/gray</item>
        <item name="android:tint">@color/gray</item>
        <item name="drawableTint">@color/gray</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SearchRefreshButton" parent="@style/SearchRefreshButtonBase">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/blackish_blue</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />
</resources>