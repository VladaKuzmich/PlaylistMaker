<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainMenuButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/main_activity_menu_item_margin</item>
        <item name="android:layout_marginTop">@dimen/main_activity_menu_item_margin</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/activity_header_text_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/main_activity_menu_corner_radius</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_activity_icon_padding</item>

    </style>

    <style name="SettingsMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">21dp</item>
        <item name="android:paddingBottom">21dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:drawableTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ActivityHeader">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/activity_header_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
</resources>