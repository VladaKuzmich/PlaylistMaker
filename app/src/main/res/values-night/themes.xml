<resources>
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blackish_blue</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/blackish_blue</item>

        <item name="android:windowBackground">@color/blackish_blue</item>
    </style>

    <style name="SearchEditText" parent="@style/RegularTextFont">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blackish_blue</item>
        <item name="android:textColorHint">@color/blackish_blue</item>
        <item name="android:drawableTint">@color/blackish_blue</item>
        <item name="android:tint">@color/blackish_blue</item>
    </style>

    <style name="SearchItemHeader" parent="@style/RegularTextFont">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchItemSubHeader" parent="@style/RegularTextFont">
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SearchRefreshButton" parent="@style/SearchRefreshButtonBase">
        <item name="android:textColor">@color/blackish_blue</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
</resources>